.button-center
    margin-left auto
    margin-right auto
    width 100%

@media (max-width: 300px)
    [data-reactid=".0.4"]
        margin-top 15px

@media (min-width: 301px) and (max-width: 600px)
    [data-reactid =".0.4"]
        margin-top 35px

@media (min-width: 601px) and (max-width: 900px)
        [data-reactid =".0.4"]
            margin-top 75px

@media (min-width: 901px)
        [data-reactid =".0.4"]
            margin-top 135px